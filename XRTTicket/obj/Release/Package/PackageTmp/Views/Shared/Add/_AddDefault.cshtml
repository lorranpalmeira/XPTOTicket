@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/bootbox.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/yeti.bootstrap.css" rel="stylesheet" />
@RenderSection("Scripts", false)
<script src="~/Scripts/Ticket/Pagination.js"></script>




<div class="container">
    <h2></h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add</button><br /><br />
    <table class="table table-bordered table-hover" id="table">
        <thead>
            <tr>
                @RenderSection("Header",false)
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <form>
                   
                    @RenderSection("ModalForm", false)
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



<div id="page">
    <ul class="pagination">
        @{ var itemjs = 0; }

        @if (ViewBag.QuantPages > 1)
        {
            <li class="page-item-previous">
                <a class="page-link" href="#">Previous</a>
            </li>

            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>

            var size = 5;
            var quantPage = ViewBag.QuantPages;
            var total = quantPage < size ? quantPage : size;

            for (int i = 2; i <= total; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="#">@i</a>
                </li>
                itemjs = i;
            }

            if (ViewBag.QuantPages > size)
            {
                <li id="next" class="page-item-next">

                    <a class="page-link" href="#">Next</a>
                </li>
            }
        }


    </ul>
</div>



